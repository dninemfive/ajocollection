<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="PlantBase">
		<defName>AJO_PlantOutdoorSpectago</defName>
		<label>spectago</label>
		<description>One of the few known breeds of photochromic flowers, each petal of the spectago plant changes color throughout the month. The petals are used by many tribal settlements to make dyes, as well as tea.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>20</Beauty>
			<Nutrition>0.3</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Cupro/Object/Plant/Spectago_Outdoors</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<plant>
			<leaflessGraphicPath>Cupro/Object/Plant/Spectago_Hiber</leaflessGraphicPath>
			<immatureGraphicPath>Cupro/Object/Plant/Spectago_Indoors</immatureGraphicPath>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>AJO_RainbowPetals</harvestedThingDef>
			<harvestYield>6</harvestYield>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<sowWork>400</sowWork>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<growMinGlow>0.6</growMinGlow>
			<growDays>8</growDays>
			<lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
			<wildBiomes>
				<TropicalRainforest>0.10</TropicalRainforest>
				<TemperateForest>0.08</TemperateForest>
				<AridShrubland>0.06</AridShrubland>
				<BorealForest>0.05</BorealForest>
				<Desert>0.04</Desert>
				<ExtremeDesert>0.03</ExtremeDesert>
				<Tundra>0.02</Tundra>
			</wildBiomes>
			<wildClusterWeight>100</wildClusterWeight>
			<wildClusterRadius>6</wildClusterRadius>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.5</max>
			</visualSizeRange>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantBase">
		<defName>AJO_PlantIndoorSpectago</defName>
		<label>spectago</label>
		<description>When grown indoors, the spectago flower doesn't gain the needed nutrients to produce useful petals, but the flower is still quite beautiful.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>10</Beauty>
			<Nutrition>0.1</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Cupro/Object/Plant/Spectago_Indoors</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<sowWork>400</sowWork>
			<sowTags>
				<li>Decorative</li>
			</sowTags>
			<growMinGlow>0.3</growMinGlow>
			<growDays>3</growDays>
			<lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
		</plant>
	</ThingDef>

</Defs>