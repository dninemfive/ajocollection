<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--===== Stove recipes =====-->
	<!-- Spectago Tea (normal, bulk) -->
	<RecipeDef>
		<defName>AJO_BrewSpectagoTea</defName>
		<label>brew spectago tea</label>
		<description>Brew spectago tea by gently steeping the petals in hot water.</description>
		<jobString>Brewing spectago tea.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>250</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>2</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AJO_RainbowPetals</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AJO_RainbowPetals</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AJO_SpectagoTea>2</AJO_SpectagoTea>
		</products>
		<recipeUsers>
			<li>FueledStove</li>
			<li>ElectricStove</li>
		</recipeUsers>
		<skillRequirements>
			<Cooking>2</Cooking>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
	</RecipeDef>
	<RecipeDef>
		<defName>AJO_BrewSpectagoTeaBulk</defName>
		<label>brew spectago tea in bulk</label>
		<description>Brew spectago tea by gently steeping the petals in hot water.</description>
		<jobString>Brewing spectago tea.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<workAmount>1000</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>20</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AJO_RainbowPetals</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AJO_RainbowPetals</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AJO_SpectagoTea>20</AJO_SpectagoTea>
		</products>
		<recipeUsers>
			<li>FueledStove</li>
			<li>ElectricStove</li>
		</recipeUsers>
		<skillRequirements>
			<Cooking>3</Cooking>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
	</RecipeDef>
	<!-- Paint (normal, tempera) -->
	<RecipeDef>
		<defName>AJO_MakePaint</defName>
		<label>make paint</label>
		<description>Create paint by boiling petals of the spectago plant until the gum and pigments bind.</description>
		<jobString>Making paint.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>420</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AJO_RainbowPetals</li>
					</thingDefs>
				</filter>
				<count>24</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AJO_RainbowPetals</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AJO_Paint>3</AJO_Paint>
		</products>
		<recipeUsers>
			<li>FueledStove</li>
			<li>ElectricStove</li>
		</recipeUsers>
		<skillRequirements>
			<Cooking>3</Cooking>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
	</RecipeDef>
	<RecipeDef>
		<defName>AJO_MakePaintTempera</defName>
		<label>make tempera paint</label>
		<description>Create paint by boiling petals of the spectago plant until the gum and pigments bind. Use eggs as a more efficient binder.</description>
		<jobString>Making paint.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>660</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AJO_RainbowPetals</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>EggsUnfertilized</li>
						<li>EggsFertilized</li>
					</categories>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AJO_RainbowPetals</li>
			</thingDefs>
			<categories>
				<li>EggsUnfertilized</li>
				<li>EggsFertilized</li>
			</categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>AJO_RainbowPetals</li>
			</thingDefs>
			<categories>
				<!-- Don't use fertilized eggs by default -->
				<li>EggsUnfertilized</li>
			</categories>
		</defaultIngredientFilter>
		<products>
			<AJO_Paint>5</AJO_Paint>
		</products>
		<recipeUsers>
			<li>FueledStove</li>
			<li>ElectricStove</li>
		</recipeUsers>
		<skillRequirements>
			<Cooking>5</Cooking>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
		<researchPrerequisite>AJO_TemperaPainting</researchPrerequisite>
	</RecipeDef>
	<!--===== Easel recipes =====-->
	<!-- painting recipe -->
	<RecipeDef>
		<defName>AJO_MakePainting</defName>
		<label>paint painting</label>
		<description>Paint a painting.</description>
		<jobString>Painting.</jobString>
		<workAmount>15000</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Artistic</workSkill>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Cloth</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>AJO_PaintingSupplies</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Cloth</li>
				<li>AJO_PaintingSupplies</li>
			</thingDefs>
		</fixedIngredientFilter>
		<unfinishedThingDef>AJO_UnfinishedPainting</unfinishedThingDef>
		<products>
			<AJO_Painting>1</AJO_Painting>
		</products>
		<recipeUsers>
			<li>AJO_Easel</li>
		</recipeUsers>
	</RecipeDef>
	<!-- painting supplies recipes (leaves, paint) -->
	<RecipeDef>
		<defName>AJO_MakePaintingSuppliesLeaves</defName>
		<label>make painting supplies with petals</label>
		<description>Assemble a palette and brush from wood and produce paint directly from rainbow petals. Much less efficient than using properly cooked paint.</description>
		<jobString>Making painting supplies.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AJO_RainbowPetals</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<stuffCategoriesToAllow>
						<li>Woody</li>
					</stuffCategoriesToAllow>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AJO_RainbowPetals</li>
			</thingDefs>
			<stuffCategoriesToAllow>
				<li>Woody</li>
			</stuffCategoriesToAllow>
		</fixedIngredientFilter>
		<products>
			<AJO_PaintingSupplies>1</AJO_PaintingSupplies>
		</products>
		<recipeUsers>
			<li>AJO_Easel</li>
		</recipeUsers>
	</RecipeDef>
	<RecipeDef>
		<defName>AJO_MakePaintingSuppliesPaint</defName>
		<label>make painting supplies with paint</label>
		<description>Assemble a palette and brush from wood and mix paints to be used for painting.</description>
		<jobString>Making painting supplies.</jobString>
		<workAmount>450</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AJO_Paint</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<stuffCategoriesToAllow>
						<li>Woody</li>
					</stuffCategoriesToAllow>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AJO_Paint</li>
			</thingDefs>
			<stuffCategoriesToAllow>
				<li>Woody</li>
			</stuffCategoriesToAllow>
		</fixedIngredientFilter>
		<products>
			<AJO_PaintingSupplies>1</AJO_PaintingSupplies>
		</products>
		<recipeUsers>
			<li>AJO_Easel</li>
		</recipeUsers>		
	</RecipeDef>
</Defs>